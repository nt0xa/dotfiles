# Options {{{ #

# Show only one pane
set nopreview
set ratios 1

# Prompt
set promptfmt "\033[34;1m%d\033[0m"

# No time
set timefmt ""

# }}} #

# Commands {{{ #

cmd touch %touch $1
cmd mkdir %mkdir $1

# }}} #

# Keybindings {{{ #

map n push :touch<space>
map N push :mkdir<space>

# Delete
map D :delete

# Open
map <enter> open

# Rename
map r :rename

# }}} #
